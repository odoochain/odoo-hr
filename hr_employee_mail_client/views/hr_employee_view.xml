<odoo>
    <data>
        <record id="employee_mail_form_view" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='hr_settings']" position="after">
                    <field name="show_messages" invisible="1"/>
                    <page name="mail_message" string="Messages" attrs="{'invisible': [('show_messages', '=', False)]}">
                        <field name="mail_message_id"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
