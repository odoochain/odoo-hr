<odoo>
    <data>

        <record id="view_hr_user_ciam_wizard" model="ir.ui.view">
            <field name="name">hr.employee.user.ciam.form</field>
            <field name="model">hr.employee.user.ciam</field>
            <field name="arch" type="xml">
                <form string="CIAM Update">
                    <group>
                        <field name="employee_id" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Update" type="object" name="action_update_ciam" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_employee_action_user_ciam" model="ir.actions.act_window">
            <field name="name">Update CIAM for User</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.user.ciam</field>
            <field name="domain">[('id','in',active_ids)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_hr_user_ciam_wizard"/>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
        </record>

    </data>
</odoo>
